{
  "name": "restaurant-ordering-system-backend",
  "version": "1.0.0",
  "description": "Azure Function App for Restaurant Ordering System",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && func start",
    "dev": "concurrently \"npm run build:watch\" \"nodemon --watch dist --exec 'func start --port 7071'\"",
    "build:watch": "tsc -w -p tsconfig.json",
    "start:dist": "func start --script-root dist --port 7073"
  },
  "dependencies": {
    "@azure/cosmos": "^4.5.1",
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "azure-functions-core-tools": "^4.0.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.6"
  }
}
